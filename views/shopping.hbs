.add-cart{
    position: absolute;
    bottom: 0;
    right: 0;
    background-color:#2ed573;
    padding: 10px;
    color: white;
    font-size: 1.1rem;
    cursor: pointer;
    transition: 0.5s;
}

.add-cart:hover {
    background-color: rgba(255, 0, 0, 0.786);
}

.cart{
    position:fixed;
    top: 0;
    right: -100%;
    width: 400px;
    height: 100vh;
    overflow-y: auto;
    overflow-x: hidden;
    padding: 20px;
    background-color: white;
    box-shadow: 0 1px 4px black;
    z-index: 100;
}

.cart-active{
    right: 0;
    transition: 0.5s;
}

.cart-title{
    text-align: center;
    font-size: 1.5em;
    font-weight: 500;
    margin-bottom: 1rem;
    border-bottom: 1px solid lightgray;
    padding-bottom: 15px;
}

